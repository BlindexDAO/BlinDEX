{
  "name": "blindex",
  "scripts": {
    "start": "npm-run-all deploy:fork:reset initialize",
    "prepare": "husky install",
    "test": "npm run deploy:fork:reset && hardhat --network mainnetFork test:dir --deploy-fixture ./test/integration/",
    "test-unit": "hardhat --network mainnetFork test:dir ./test/unit/",
    "test:gas": "npm run deploy:fork:reset && cross-env REPORT_GAS=true hardhat --network mainnetFork test:dir --deploy-fixture ./test/integration/",
    "node": "hardhat node --no-deploy",
    "deploy:fork": "hardhat --network mainnetFork deploy",
    "deploy:fork:reset": "npm run deploy:fork -- --reset",
    "deploy:rinkeby": "hardhat --network rinkeby deploy",
    "deploy:kovan": "hardhat --network kovan deploy",
    "deploy:rsk": "hardhat --network rsk deploy",
    "initialize": "hardhat --network mainnetFork initialize:local",
    "update:oracles:fork": "hardhat --network mainnetFork update:oracles",
    "update:oracles:rsk": "hardhat --network rsk update:oracles",
    "compile": "hardhat compile --config hardhat.compile.config.ts",
    "solhint": "npx solhint 'contracts/**/*.sol' --y",
    "eslint": "npx eslint . --ext .js,.ts,.json --fix",
    "lint": "npm-run-all --parallel solhint eslint",
    "format": "npx prettier --write . --loglevel silent",
    "npm-package": "npx hardhat --network mainnetFork npm-package",
    "prepare-blindex-package": "npx hardhat --network mainnetFork blindex-npm-package",
    "blindex-package": "npm-run-all compile \"prepare-blindex-package -- --new-version {1}\" --",
    "publish-blindex-package": "npm publish @blindex/interfaces/ --access public"
  },
  "devDependencies": {
    "@ethersproject/providers": "^5.5.0",
    "@nomiclabs/ethereumjs-vm": "4.2.2",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.6.0",
    "@typechain/ethers-v5": "^8.0.3",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/fs-extra": "^9.0.13",
    "@types/klaw-sync": "^6.0.1",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@types/rimraf": "^3.0.2",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@uniswap/token-lists": "^1.0.0-beta.28",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "3.4.0",
    "ethers": "^5.5.1",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.6.8",
    "hardhat-deploy": "^0.8.11",
    "hardhat-deploy-ethers": "^0.3.0-beta.11",
    "hardhat-gas-reporter": "^1.0.6",
    "hardhat-typechain": "^0.3.5",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "moment": "^2.29.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^6.0.3",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.5.0",
    "@openzeppelin/contracts-upgradeable": "4.5.2",
    "@uniswap/v2-core": "1.0.1",
    "@uniswap/v2-periphery": "1.1.0-beta.0"
  },
  "lint-staged": {
    "*.{js,ts,css,md,json,yml,yaml,sol}": [
      "prettier --write"
    ],
    "*.{js,ts,json}": [
      "npx eslint --fix"
    ]
  }
}
