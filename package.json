{
  "name": "hardhat-project",
  "scripts": {
    "prepare": "husky install",
    "test": "hardhat --network mainnetFork test:dir --deploy-fixture ./test/integration/",
    "node": "hardhat node --no-deploy",
    "deploy:fork": "hardhat --network mainnetFork deploy",
    "deploy:fork:reset": "npm run deploy:fork -- --reset",
    "deploy:rinkeby": "hardhat --network rinkeby deploy",
    "deploy:kovan": "hardhat --network kovan deploy",
    "deploy:rsk": "hardhat --network rsk deploy",
    "initialize": "hardhat --network mainnetFork initialize:local",
    "update:oracles:fork": "hardhat --network mainnetFork update:oracles",
    "update:oracles:rsk": "hardhat --network rsk update:oracles",
    "npm-package": "hardhat --network mainnetFork npm-package",
    "compile": "hardhat compile --config hardhat.compile.config.ts",
    "solhint": "npx solhint 'contracts/**/*.sol'"
  },
  "devDependencies": {
    "@ethersproject/providers": "^5.5.0",
    "@nomiclabs/ethereumjs-vm": "4.2.2",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "3.4.2",
    "@openzeppelin/contracts-upgradeable": "3.4.2",
    "@openzeppelin/hardhat-upgrades": "^1.6.0",
    "@typechain/ethers-v5": "^8.0.3",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@uniswap/lib": "4.0.1-alpha",
    "@uniswap/v2-core": "1.0.1",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "bignumber.js": "^9.0.1",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "3.4.0",
    "ethers": "^5.5.1",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.6.8",
    "hardhat-dependency-compiler": "^1.1.2",
    "hardhat-deploy": "^0.8.11",
    "hardhat-deploy-ethers": "^0.3.0-beta.11",
    "hardhat-typechain": "^0.3.5",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^6.0.3",
    "typescript": "^4.2.2"
  },
  "lint-staged": {
    "*.{js,ts,css,md,json,yml,yaml,sol}": "prettier --write"
  }
}
